[*]
charset = utf-8
insert_final_newline = true
max_line_length = 150

# JavaScript and React JSX files
[*.js, *.jsx]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Ignore vendor directories
[**/node_modules/**]
